<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Libery_Frontend.Views.Search">
    <ContentPage.Resources>

        <ResourceDictionary Source="ResourcePage.xaml"/>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>

            <StackLayout Padding="10,0,10,0">

                <StackLayout>
                    <Label x:Name="Searchlabel" Text="Sök"/>
                    <Entry x:Name="SearchEntry"/>
                </StackLayout>


                <StackLayout>
                    
                    <Label Text="{Binding Products}" IsVisible="True" x:Name="SelectedAuthorId" Margin="0,100,0,0"/>
               
                </StackLayout>
                <Button x:Name="SearchButton" HorizontalOptions="Center" Text="Sök en produkt" Margin="0,30,0,0" Clicked="SearchButtom_Clicked"/>


            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>